<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tusar.creativeitem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".BaseActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AppointmentActivity"
            android:label="Appointment List"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PrescriptionActivity"
            android:label="New Prescription"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".PatientActivity"
            android:label="Patient List"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PatientDetailsActivity" />
        <activity
            android:name=".NewAppointment"
            android:label="New Appointment"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".NewPatient"
            android:label="New Patient"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".NewBilling"
            android:label="New Billing"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ProfileActivity"
            android:label="Profile"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ScheduleActivity"
            android:label="Schedule"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BillingActivity"
            android:label="Billing List"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PrescriptionDetailsActivity"
            android:label="Prescription Details" />
        <activity
            android:name=".BillingDetailsActivity"
            android:label="Billing Details" />
        <activity
            android:name=".PasswordActivity"
            android:label="Change Password"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>